<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态：半透明黑色覆盖在白色之上 -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#22000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 默认状态：白色背景 -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</selector>
